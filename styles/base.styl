html, body
  height 100%
  overflow hidden
  background-color black

.text-container
  opacity 1
  position absolute
  top 40%
  left 30%
  z-index 10

  .text
    color white

  #text2
    position absolute
    top 0

  #rainbowWord
    position relative
    float right
    clear none
    top -110px
    right -90px
    width 300px
    padding 0

.audio
  position absolute
  display none
  bottom 10%
  left 35%
  color red
  z-index 300

.instructions
  display none
  opacity 0
  position absolute
  top 70%
  left 30%
  z-index 300
  color white

  #press_space
    display inline

.background-container
  position absolute
  width 1976px
  height 1308px
  top 0
  left 0
  opacity 0
  float left
  overflow hidden
  //background-image url('../images/large-star-scape.jpg')

  .background
    position absolute
    float left
    width 1976px
    height 1308px
    background-repeat no-repeat
    font-color black
    font-size 100px
    //background-repeat cover

  #background1
    left 0
    top 0
    width 200%
    //background red
    opacity 0.6
    background url('../images/large-star-scape.jpg')
    background-repeat repeat
    z-index 11

  #background2
    left 0
    top -100px
    width 200%
    //background blue
    opacity 0.5
    z-index 10
    background url('../images/large-star-scape.jpg')
    background-repeat repeat

  #background3
    left 0
    top -200px
    width 400%
    z-index 9
    //background green
    background url('../images/large-star-scape.jpg')
    background-repeat repeat

.nyan-cat
  position absolute
  display none
  top 40%
  left 10%
  width 200px
  height 100px
  align-content
  z-index 20
  overflow visible

#canvas
  position absolute
  display inline-block
  width 350px
  height 155px

.pizza
  display none
  position absolute
  height 170px
  top 20%
  right 10%
  transform skewY(-12deg) skewX(40deg)

.comet
  position relative
  z-index 20
  transform rotate(-20deg)

